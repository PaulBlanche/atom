{
    "compilerOptions": {
        "lib": [
            "esnext",
            "deno.ns",
            "deno.unstable",
            "dom",
            "dom.iterable",
            "dom.asynciterable"
        ]
    },
    "fmt": {
        "files": {
            "exclude": ["./examples", "./.vscode/"]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 80,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}
